							<figure>
								<img class="border-radius" src='./images/inkling.png' alt='イカ(メス)'>
								<figcaption>イカ</figcaption>
							</figure>
						</label>

						<input type="radio" id="octo" name="kind" value="タコ" <?= $view['kind_checked']['タコ'] ?> />
